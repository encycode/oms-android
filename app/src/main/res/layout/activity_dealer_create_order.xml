<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDefault"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DealerCreateOrder">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/cardViewDefault"
        app:cardCornerRadius="20dp"
        android:layout_weight="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bharat Ice Cream"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/buttonDefault"/>

        <TextView
            android:id="@+id/mobileNoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="82356678193"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/buttonDefault"/>

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/buttonDefault"/>


        <Button
            android:id="@+id/btnCreateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:backgroundTint="@color/buttonDefault"
            android:padding="15dp"
            android:text="Create Order"
            android:textColor="@color/white" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>