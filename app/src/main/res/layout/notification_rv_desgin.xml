<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/cardViewDefault"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/buttonDefault"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/cone" />

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Offer Offer Offer"
                android:textColor="@color/buttonDefault"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/downBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/down"
                android:tint="@color/buttonDefault" />


        </LinearLayout>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/notificationDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttonDefault"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>